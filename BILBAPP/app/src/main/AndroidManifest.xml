<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jbarrientos.bilbapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".View.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".View.LanguageSelectionActivity" />
        <activity android:name=".View.HomeActivity" />
        <activity android:name=".View.SelectionActivity" />
        <activity android:name=".View.InfoActivity" />
        <activity android:name=".View.MapActivity" />
        <activity android:name=".View.TranslationActivity" />
        <activity android:name=".View.ExperienceActivity" />
        <activity android:name=".View.ExpericenceShowActivity" />
        <activity android:name=".View.QualificationActivity" />
        <activity android:name=".View.RatingActivity"></activity>
    </application>

</manifest>