<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jbarrientos.bilbapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Presenter.Activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Presenter.Activities.LanguageSelectionActivity" android:screenOrientation="portrait"/>
        <activity android:name=".Presenter.Activities.HomeActivity" android:screenOrientation="portrait"/>
        <activity android:name=".Presenter.Activities.SelectionActivity" android:screenOrientation="portrait"/>
        <activity android:name=".Presenter.Activities.InfoActivity" android:screenOrientation="portrait"/>
        <activity android:name=".Presenter.Activities.MapActivity" android:screenOrientation="portrait"/>
        <activity android:name=".Presenter.Activities.TranslationActivity" android:screenOrientation="portrait"/>
        <activity android:name=".Presenter.Activities.ExperienceActivity" android:screenOrientation="portrait"/>
        <activity android:name=".Presenter.Activities.ExpericenceShowActivity" android:screenOrientation="portrait"/>
        <activity android:name=".Presenter.Activities.QualificationActivity" android:screenOrientation="portrait"/>
        <activity android:name=".Presenter.Activities.RatingActivity" android:screenOrientation="portrait"></activity>
    </application>

</manifest>