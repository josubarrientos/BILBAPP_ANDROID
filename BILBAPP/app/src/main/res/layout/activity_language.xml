<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_language"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jbarrientos.bilbapp.LanguageSelectionActivity">

    <ImageButton
        android:layout_width="280px"
        app:srcCompat="@drawable/euskadi"
        android:id="@+id/imageButtonEuskadi"
        android:scaleType="fitXY"
        android:layout_height="200px"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="147dp"
        android:onClick="selectEuskadi"/>

    <ImageButton
        android:layout_width="280px"
        app:srcCompat="@drawable/spain"
        android:id="@+id/imageButtonSpain"
        android:scaleType="fitXY"
        android:layout_height="200px"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/imageButtonEuskadi"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="selectSpain"/>

    <ImageButton
        android:layout_width="280px"
        app:srcCompat="@drawable/galicia"
        android:id="@+id/imageButtonGalicia"
        android:scaleType="fitXY"
        android:layout_height="200px"
        android:layout_marginRight="11dp"
        android:layout_marginEnd="11dp"
        android:onClick="selectGalicia"
        android:layout_alignTop="@+id/imageButtonCatalunia"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="280px"
        app:srcCompat="@drawable/catalunia"
        android:id="@+id/imageButtonCatalunia"
        android:scaleType="fitXY"
        android:layout_height="200px"
        android:onClick="selectCatalunia"
        android:layout_alignTop="@+id/imageButtonEuskadi"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="280px"
        app:srcCompat="@drawable/france"
        android:id="@+id/imageButtonFrance"
        android:scaleType="fitXY"
        android:layout_height="200px"
        android:onClick="selectFrance"
        android:layout_alignTop="@+id/imageButtonEngland"
        android:layout_alignLeft="@+id/imageButtonGalicia"
        android:layout_alignStart="@+id/imageButtonGalicia" />

    <ImageButton
        android:layout_width="280px"
        app:srcCompat="@drawable/england"
        android:id="@+id/imageButtonEngland"
        android:scaleType="fitXY"
        android:layout_height="200px"
        android:onClick="selectEngland"
        android:layout_alignTop="@+id/imageButtonSpain"
        android:layout_alignLeft="@+id/imageButtonCatalunia"
        android:layout_alignStart="@+id/imageButtonCatalunia" />

</RelativeLayout>
